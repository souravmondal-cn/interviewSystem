{% extends "admin/base.twig" %}

{% block body %}

    <div align='left'>
        <a class="btn green" href="/questionupload">Add Question &nbsp;<i class="fa fa-plus"></i></a>
    </div>

    <br><br>
    <table cellpadding="5" border="1" class="table table-striped table-hover table-bordered">
        <thead>
            <tr  class="info">
                <th>
                    Question Id
                </th>

                <th>
                    Question
                </th>

                <th>
                    Question Category
                </th>

                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            {% for question in questions %}
                <tr>
                    <td>
                        {{ question.id }}
                    </td>
                    <td>
                        {{ question.question|striptags }}
                    </td>

                    <td>
                        {{ question.categoryId.categoryName }}
                    </td>
                    <td>
                        <a class="btn blue btn-outline" href="/editQuestion/{{ question.id }}" data-toggle="tootltip" data-placement="bottom" title="Edit">Edit &nbsp; <i class="fa fa-pencil-square-o"></i></a> 
                        <a class="btn red btn-outline" href="/deleteQuestion/{{ question.id }}" data-toggle="tootltip" data-placement="bottom" title="Delete">Delete &nbsp; <i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}

        </tbody>
    </table>

{% endblock %}