{% extends "admin/base.twig" %}

{% block body %}
    
        <div align="left">
            <a class="btn green" href="/adduser/{{pageHeading}}">Add {{pageHeading}} &nbsp;<i class="fa fa-plus"></i></a>
        </div>

        <br><br>
        <table cellpadding="5" border="1" class="table table-striped table-hover table-bordered">
            <thead>
                <tr class="info">
                    <th>
                        User Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email Id
                    </th>
                    <th>
                        Location
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Resumé
                    </th>
                    <th>
                        Edit user data
                    </th>
                    <th>
                        Delete user data
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for singleUserData in userData %}
                    <tr>
                        <td>
                            {{singleUserData.id}}
                        </td>
                        <td>
                            {{singleUserData.userName}}
                        </td>
                        <td>
                            <a href = '/viewHistory/{{singleUserData.userEmail}}'>{{singleUserData.userEmail}}</a>
                        </td>
                        <td>
                            {{singleUserData.officeLocation}}
                        </td>
                        <td>
                            {{singleUserData.userAddress|striptags}}
                        </td>
                        <td>
                            <a class="btn purple btn-outline" href="/viewfile/{{singleUserData.id}}" target="_blank">View resumé</a>
                        </td>
                        <td align="center">
                            <a class="btn blue btn-outline" href='/edituser/{{pageHeading}}/{{singleUserData.id}}'>Edit</a>
                        </td>
                        <td align="center">
                            <a class="btn red btn-outline" href='/deleteuser/{{pageHeading}}/{{singleUserData.id}}'>Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% for message in app.session.getFlashBag.get('admin_message') %}
            <div align="center">
                <p>{{message}}</p>
            </div>
        {%endfor%}

{% endblock %}