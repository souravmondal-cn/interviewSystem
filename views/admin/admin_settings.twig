{% extends "admin/base.twig" %}

{% block body %}

    <div align='left'>
        <a  class="btn green" href="/adduser/{{pageHeading}}">Add {{pageHeading}} &nbsp;<i class="fa fa-plus"></i></a>
    </div>
    <br><br>

    <table cellpadding="5" border="1" class="table table-striped table-hover table-bordered">
        <thead>
            <tr class="info">
                <th>
                    User Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email Id
                </th>
                <th>
                    Edit user details
                </th>
                <th>
                    Delete user
                </th>
            </tr>
        </thead>
        <tbody>
            {% for singleUserData in userData %}
                <tr>
                    <td>
                        {{singleUserData.id}}
                    </td>
                    <td>
                        {{singleUserData.userName}}
                    </td>
                    <td>
                        {{singleUserData.userEmail}}
                    </td>
                    <td align="center">
                        <a class="btn btn-info" href='/edituser/{{pageHeading}}/{{singleUserData.id}}'>Edit</a>
                    </td>
                    <td align="center">
                        <a class="btn btn-danger" href='/deleteuser/{{pageHeading}}/{{singleUserData.id}}'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div align="center">
        {% for message in app.session.getFlashBag.get('admin_message') %}
            <p>{{message}}</p>
        {%endfor%}
    </div>

{% endblock %}