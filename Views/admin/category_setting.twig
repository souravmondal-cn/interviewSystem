{% extends "admin/base.twig" %}

{% block body %}
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">   
    </div>
    
    <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                
    <h3>
    Category - sub category setting
    </h3>
        <div align='left'>
            <a class="btn btn-primary" href="/addcategory">Add Category</a>
        </div>
    <div align="center" class="col-md-6">
        {% for message in app.session.getFlashBag.get('admin_message') %}
            <p>{{message}}</p>
        {%endfor%}
    </div>
    
    <br><br>
    <table cellpadding="5" border="1" class="table table-striped table-bordered">
        <thead>
            <tr  class="info">
                <th>
                    Category Id
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Edit category
                </th>
                <th>
                    Delete category
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    {{ category.cid }}
                </td>
                <td>
                    {{ category.categoryName }}
                </td>
                <td align="center">
                    <a class="btn btn-info" href="/editCategory/{{ category.cid }}">Edit</a> 
                </td>
                <td align="center">
                    <a class="btn btn-danger" href="/deleteCategory/{{ category.cid }}">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
</div>
    
 <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">   
 </div>
    {% endblock %}